@model List<Dependent>

<style>
    body {
        background-color: #ffe6f7; 
    }

    h1 {
        color: #ff7777; 
        text-align: center;
    }

    .table {
        width: 80%; 
        margin: 20px auto; 
        border: 1px solid #ffaaaaff; 
        border-radius: 10px; 
        overflow: hidden; 
        background-color: #ffffff; 
    }

    .table thead {
        background-color: #ff7777; 
        color: white; 
    }

    .table th, .table td {
        padding: 10px; 
        text-align: center; 
        border-bottom: 1px solid #ffaaaaff; 
    }

    .table tbody tr:hover {
        background-color: #ffe6f7; 
    }
</style>

<center><h1>Dependent List</h1></center>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Date</th>
            <th scope="col">Relation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.employee.FName</td>
                <td>@item.Sex</td>
                <td>@item.Date</td>
                <td>@item.Relation</td>
            </tr>
        }
    </tbody>
</table>
